<%- include('./partials/head') %>
  <!-- * voorbeeld van krijn: https://github.com/krijnhoetmer/server-side-rendering-server-side-website/tree/main  -->

  <header>
    <%- include('partials/nav', {current: '/' }); %>

  </header>

  <main>

    <div class="playlist-wrapper">
      <h2>Playlists</h2>

      <div class="playlist-container">
        <div class="new-playlist">
          <button aria-label="create new playlist"><i class='bx bx-list-plus'></i></button>
        </div>

        <% playlists.forEach(playlist=> { %>
          <article class="playlist">
            <% if (playlist.image) { %><img src="https://fdnd-agency.directus.app/assets/<%= playlist.image %>"
                alt="playlist cover image">
              <% } %>
                <h3>
                  <%= playlist.title %>
                </h3>
                <p>
                  <%= playlist.description %>
                </p>

                <div class="playlist-btn">
                  <button aria-label="download playlist" class="download-btn"><i class='bx bxs-download'></i></button>
                  <button aria-label="see playlist details" class="play-btn"><i class='bx bxs-right-arrow'></i></button>
                </div>
          </article>
          <% }) %>


      </div>

      <div class="carousel-btn">
        <button aria-label="previous"><i class='bx bxs-left-arrow'></i></button>
        <% playlists.forEach(playlist=> { %>
          <a href="#">
            <%= playlist.id %>
          </a>
          <% }) %>
            <button aria-label="next"><i class='bx bxs-right-arrow'></i></button>
      </div>

    </div>

    <div class="story-wrapper">
      <h2><a href="/stories">Stories</a></h2>
      <div class="story-container">
        <% stories.forEach(story=> { %>
          <article class="story">
            <h3>
              <%= story.title %>
            </h3>
            <% if (story.image) { %><img src="https://fdnd-agency.directus.app/assets/<%= story.image %>"
                alt="story cover image">
              <% } %>

                <p>
                  <%= story.summary %>
                </p>
                <div class="story-extras">
                  <button class="download-btn" aria-label="download story"><i class='bx bxs-download'></i></button>
                  <button class="addto-btn" aria-label="add story to playlist"><i class='bx bx-list-plus'></i></button>
                  <button class="play-btn" aria-label="play story"><i class='bx bx-play'></i></button>
                </div>
          </article>
          <% }) %>

      </div>

    </div>
  </main>

  <%- include('./partials/foot') %>